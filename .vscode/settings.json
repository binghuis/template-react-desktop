{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "stylelint.validate": [
        "css",
        "less"
    ],
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[less]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "package.json": ".prettierrc, .prettierignore, .czrc, .eslintrc, .eslintignore, tsconfig.json, postcss.config.cjs, changelog.config.cjs, .release-it.json, .stylelintrc, orval.config.ts, .npmrc, .nvmrc",
        ".env.development": ".env.mock, .env.production"
    }
}