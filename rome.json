{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentSize": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"complexity": {},
			"correctness": {},
			"performance": {},
			"security": {},
			"style": {},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"files": {
		"ignore": [
			"public",
			"dist",
			"router.ts",
			"__service__"
		]
	}
}